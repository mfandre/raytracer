# viewpoint
v
from 1 20 0
at 0 0 0
up 0 0 1
angle 60
hither 0
resolution 640 480

# venus
shader SimpleTexture venus.ppm
s -1 2 1.5 1

# terra
shader SimpleTexture earth.ppm
s -2 4 0 2

# lua
shader SimpleTexture lune.ppm
s -4 4.5 2 0.3

# sol
shader SimpleTexture solar.ppm
s 1 -5 1 7

# marte
shader SimpleTexture mars.ppm
s 0 6 0 1.6

# jupiter
shader SimpleTexture jupiter.ppm
s 3 8 2 3

#bg
shader SimpleTexture space5.ppm
s 0 -300 0 230
